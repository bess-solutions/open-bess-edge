# =============================================================================
# BESSAI Edge Gateway — Environment Variables Example
# Copy this file to config/.env and fill in your values.
# NEVER commit the real .env file to version control.
# =============================================================================

# ---------------------------------------------------------------------------
# Site identity  (REQUIRED)
# ---------------------------------------------------------------------------
SITE_ID=SITE-CL-001

# ---------------------------------------------------------------------------
# Inverter / BESS device connection  (REQUIRED)
# ---------------------------------------------------------------------------
INVERTER_IP=192.168.1.100
INVERTER_PORT=502                       # Optional — default: 502

# ---------------------------------------------------------------------------
# Driver profile  (Optional — default: registry/huawei_sun2000.json)
# ---------------------------------------------------------------------------
DRIVER_PROFILE_PATH=registry/huawei_sun2000.json

# ---------------------------------------------------------------------------
# Safety & Watchdog  (Optional — default: 5)
# ---------------------------------------------------------------------------
WATCHDOG_TIMEOUT=5

# ---------------------------------------------------------------------------
# Google Cloud Platform  (REQUIRED in production)
# ---------------------------------------------------------------------------
GCP_PROJECT_ID=your-gcp-project-id
GCP_PUBSUB_TOPIC=bess-telemetry
GOOGLE_APPLICATION_CREDENTIALS=/run/secrets/gcp-key.json

# ---------------------------------------------------------------------------
# OpenTelemetry  (Optional)
# ---------------------------------------------------------------------------
OTEL_SERVICE_NAME=bessai-edge-gateway
OTEL_SERVICE_VERSION=0.2.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# ---------------------------------------------------------------------------
# Logging  (Optional — default: INFO)
# ---------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
